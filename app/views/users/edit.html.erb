<%#= form_tag('/users', method: :post) do %>

<%= form_for @user, url: users_path(@user),  :url => { :action => "update" } do |usr| %>

  <%= usr.label :username, 'User:' %>
  <%= usr.text_field :username %>
  <br>

  <%= usr.label :email, 'Email:' %>
  <%= usr.text_field :email, placeholder: 'example@example.com' %>
  <br>

  <%= usr.label :password, 'Password:' %>
  <%= usr.password_field :password %>

  <br>
  <%= button_tag 'Submit' %>

<% end %>